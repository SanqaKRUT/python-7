def switch_check(switch):
    if switch == True:de
        print("True работает")
    elif switch == False:
        print("False не работает")
    else:
        print(f"{switch} сломан")
switch_1 = True
switch_2 = False
switch_3 = None

switch_check(switch_1)
switch_check(switch_2)
switch_check(switch_3)

Задание№3.1

def triangle(a,b,c):
    print("Длина сторон треугольника:",a,b,c,"\nИнформация:")
    if a + b <= c or a + c <= b or c + b < a:
        print("некорректные стороны. Невозможно построить треугольник.")
    elif a != b and a != c and b != c:
        print("Разносторонний треугольник.")
    elif a ==b or a == c or b == c:
        print("Равнобедренный треугольник.")
    elif a == b == c:
        print("Равносторонний треугольник.")

Задание№3.2

import math
def triangle(a, b, c):
    print("Длина сторон треугольника:" a, b, c, "\nИнформация:")
    if a +b <= c or a + c <= b <= b <= a:
        print("Некоторые стороныю Невозможно постороить треугольник.")
    elif a != b and a != b and c:
        print("Разносторонний треугольник")
    elif a== b or a == c or b == c:
        print("Равнобедренный тругольник")
    elif a== b == c:
        print("Равносторонний треугольник")
    p = (a + b +c)
    s = p / 2
    area = math.sqrt(s * (s - a) * (s - b) *(s - c))
    print(f"Площадь: {int(s)}\nериметр: {round(area, 2)}")

