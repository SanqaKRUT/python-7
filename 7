def switch_check(switch):
    if switch == True:de
        print("True работает")
    elif switch == False:
        print("False не работает")
    else:
        print(f"{switch} сломан")
switch_1 = True
switch_2 = False
switch_3 = None

switch_check(switch_1)
switch_check(switch_2)
switch_check(switch_3)

Задание№3.1

def triangle(a,b,c):
    print("Длина сторон треугольника:",a,b,c,"\nИнформация:")
    if a + b <= c or a + c <= b or c + b < a:
        print("некорректные стороны. Невозможно построить треугольник.")
    elif a != b and a != c and b != c:
        print("Разносторонний треугольник.")
    elif a ==b or a == c or b == c:
        print("Равнобедренный треугольник.")
    elif a == b == c:
        print("Равносторонний треугольник.")

Задание№3.2

import math
def triangle(a, b, c):
    print("Длина сторон треугольника:" a, b, c, "\nИнформация:")
    if a +b <= c or a + c <= b <= b <= a:
        print("Некоторые стороныю Невозможно постороить треугольник.")
    elif a != b and a != b and c:
        print("Разносторонний треугольник")
    elif a== b or a == c or b == c:
        print("Равнобедренный тругольник")
    elif a== b == c:
        print("Равносторонний треугольник")
    p = (a + b +c)
    s = p / 2
    area = math.sqrt(s * (s - a) * (s - b) *(s - c))
    print(f"Площадь: {int(s)}\nериметр: {round(area, 2)}")

    Zadanie №4

def number_change(inpss: int,outs: int):
    i = 0
    if inpss > outs:
        while inpss > outs:
            inpss -= 1
            i += 1
    elif inpss < outs:
        while inpss < outs:
            inpss += 1
            i += 1
    else:
        i = 0,
        print("ты бубун")
    return i, inpss, outs

print(number_change(12, 4))

Задание№5

player = 0


def info_player():
    print(f"Игрок пробежал {player} км.")


def run_player(km):
    global player
    player += km / 2


info_player()
run_player(30)
run_player(12.5)
info_player()

Задание№6

def calculator(num1: int, num2: int, operation: str) -> int:
    """
    Выполняет сложение или вычитание двух чисел.

    Args:
        num1: Первое число.
        num2: Второе число.
        operation: Операция ('+' или '-').

    Returns:
        Результат операции или сообщение об ошибке.
    """
    if operation == '+':
        return num1 + num2
    elif operation == '-':
        return num1 - num2
    else:
        return "Ошибка: Неверная операция. Используйте '+' или '-'." 
