    return(f"марка: {brand} Цвет: {color} Максимальна\ скорость: {max_speed} км/ч")

car_1 = create_car("lada","Гоночный - красный",470)
car_2 = create_car("Honda","Серый",180)
print(car_1)
print(car_2)

